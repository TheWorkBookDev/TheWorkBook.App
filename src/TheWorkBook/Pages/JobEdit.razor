@page "/jobedit/{Id:int}"

<div class="row bg-light mb-5">
    <div class="col-2">
        <a onclick="goBack()">
            <i class="oi oi-chevron-left"></i>
        </a>
    </div>
    <div class="col-10">
        <h4>Job Details</h4>
    </div>
</div>

<div class="m-2">

    <div class="shadow-lg p-3 mb-5 bg-white rounded-3">

        <div class="row mb-4">
            <div class="col-12">
                <label><b>Job Title</b></label>
                @if (Text == "edit")
                {
                    <input class="form-control" value="MAUI Developer" />
                }
                else
                {
                    <div>MAUI Developer</div>
                }
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label><b>Hours Needed</b></label>
                <div>
                    @if (Text == "edit")
                    {
                        <select class="form-select">
                            <option svalue="0">Less than 40 Hours/Week</option>
                            <option value="1">Less than 30 Hours/Week</option>
                            <option value="2">Less than 20 Hours/Week</option>
                            <option value="3">Less than 10 Hours/Week</option>
                        </select>
                    }
                    else
                    {
                        <div>Less than 40 Hours/Week</div>
                    }

                </div>
            </div>
        </div>

        <div class="row mb-4">

            <div class="col-12">
                <label>
                    <b>Duration</b>
                </label>
                <div>
                    @if (Text == "edit")
                    {
                        <select class="form-select" disabled="@(Text == "edit" ? false : true)">
                            <option value="1">Less than 1 Month</option>
                            <option value="2">1 to 3 Month</option>
                            <option value="3">3 to 6 Month</option>
                            <option value="4">More than 6 Month</option>
                        </select>
                    }
                    else
                    {
                        <div>Less than 1 Month</div>
                    }

                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label>
                    <b>Experience Level</b>
                </label>
                <div>
                    @if (Text == "edit")
                    {
                        <select class="form-select" disabled="@(Text == "edit" ? false : true)">
                            <option value="1">Beginner</option>
                            <option value="2">Intermediate</option>
                            <option value="3">Expert</option>
                        </select>
                    }
                    else
                    {
                        <div>Intermediate</div>
                    }

                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label>
                    <b>Amount</b>
                </label>
                <div>
                    @if (Text == "edit")
                    {
                        <input class="form-control" type="number" value="100" min="1" max="999" />
                    }
                    else
                    {
                        <div> €500</div>
                    }
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label>
                    <b>Job Description</b>
                </label>
                <div>
                    @if (Text == "edit")
                    {
                        <textarea class="form-control" rows="5">Lorem Ipsum is simply dummy text of the printing and typesetting industry.
